<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_view"
    android:elevation="6dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view"
        app:srcCompat="@drawable/ic_menu_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/search_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ems="10"
        android:hint="Search..."
        android:textColor="#000000"
        android:textColorHint="#777"
        android:textSize="14sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/locationButton"
        app:layout_constraintStart_toEndOf="@+id/menuButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/locationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view"
        app:srcCompat="@drawable/ic_crop_free_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/qrcodeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"/>

    <ImageButton
        android:id="@+id/qrcodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view"
        app:srcCompat="@drawable/ic_location_searching_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"/>

</android.support.constraint.ConstraintLayout>